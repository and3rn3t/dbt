# Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git!

# Database Configuration (Docker)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=dbt_analytics
DB_USER=dbt_user
DB_PASSWORD=changeme_secure_password_here

# DBT Configuration
DBT_PROFILES_DIR=./dbt_project

# Production Database (if separate)
DB_HOST_PROD=prod-database-host
DB_USER_PROD=prod_user
DB_PASSWORD_PROD=prod_secure_password
DB_NAME_PROD=prod_database

# Jupyter Configuration
JUPYTER_PORT=8888

# Adminer Configuration (Database UI)
ADMINER_PORT=8080

# API Keys (if needed)
# API_KEY=your_api_key_here
# SECRET_KEY=your_secret_key_here

# Data Source URLs
# DATA_GOV_API_KEY=your_data_gov_key

# Python Environment
# For Windows PowerShell, set with: $env:PYTHONPATH = "c:\git\dbt"
# For bash/zsh, set with: export PYTHONPATH=/path/to/dbt
PYTHONPATH=c:\git\dbt

# Jupyter Configuration
JUPYTER_ENABLE_LAB=yes

# Logging
LOG_LEVEL=INFO
